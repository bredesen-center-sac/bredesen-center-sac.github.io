---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/button';
import Calendar from '../components/Calendar';
---

<Layout title="SAC Website">
	<main class="container mx-auto px-4 py-8">
		<div class="mb-8">
			<h1 class="text-4xl font-bold mb-4">Welcome to SAC Website</h1>
			<p class="text-lg text-muted-foreground mb-6">
				This website is built with Astro, shadcn/ui, and FullCalendar.
			</p>
			
			<div class="flex gap-4 mb-8">
				<Button>Primary Button</Button>
				<Button variant="outline">Outline Button</Button>
				<Button variant="secondary">Secondary Button</Button>
			</div>
		</div>

		<div class="mb-8">
			<h2 class="text-2xl font-semibold mb-4">Calendar</h2>
			<div class="border rounded-lg p-4">
				<Calendar 
					client:load
					height="600px"
					googleCalendarApiKey=""
					googleCalendarId=""
				/>
			</div>
		</div>

		<div class="text-sm text-muted-foreground">
			<p>
				To integrate with Google Calendar, you'll need to:
			</p>
			<ol class="list-decimal list-inside mt-2 space-y-1">
				<li>Get a Google Calendar API key</li>
				<li>Find your Google Calendar ID</li>
				<li>Update the Calendar component props above</li>
			</ol>
		</div>
	</main>
</Layout>
