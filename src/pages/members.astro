---

<Layout title="Council Members" description="Meet the Student Advisory Council members representing your voice at the Bredesen Center">
  <div class="min-h-screen py-16">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-foreground mb-4">Meet Your Council</h1>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
          The Student Advisory Council is composed of dedicated students who work tirelessly to represent your interests and improve campus life at the Bredesen Center.
        </p>
      </div>

      <!-- Executive Board -->
      <section class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-foreground mb-4">Executive Board</h2>
          <p class="text-muted-foreground">
            The leadership team guiding our council's mission and initiatives.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {executiveBoard.map((member) => (
            <Card className="hover:shadow-lg transition-shadow">
              <CardHeader className="text-center">
                <MemberAvatar 
                  name={member.name} 
                  initials={member.initials} 
                  size="lg" 
                  className="mx-auto mb-4"
                  client:load 
                />
                <CardTitle className="text-foreground">{member.name}</CardTitle>
                <CardDescription className="text-primary font-semibold">
                  {member.position}
                </CardDescription>
                <div class="text-sm text-muted-foreground">
                  <p>{member.year} • {member.major}</p>
                </div>
              </CardHeader>
              <CardContent>
                <p class="text-sm text-muted-foreground mb-4">{member.bio}</p>
                <Button variant="outline" size="sm" className="w-full">
                  Contact {member.name.split(' ')[0]}
                </Button>
              </CardContent>
            </Card>
          ))}
        </div>
      </section>

      <Separator className="my-12" />

      <!-- Representatives -->
      <section>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-foreground mb-4">Council Representatives</h2>
          <p class="text-muted-foreground">
            Specialized representatives working on specific areas of student life and advocacy.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {representatives.map((member) => (
            <Card className="hover:shadow-lg transition-shadow">
              <CardHeader className="text-center">
                <MemberAvatar 
                  name={member.name} 
                  initials={member.initials} 
                  size="sm" 
                  className="mx-auto mb-4"
                  client:load 
                />
                <CardTitle className="text-foreground text-lg">{member.name}</CardTitle>
                <CardDescription className="text-primary font-semibold">
                  {member.position}
                </CardDescription>
                <div class="text-sm text-muted-foreground">
                  <p>{member.year} • {member.major}</p>
                </div>
              </CardHeader>
              <CardContent>
                <p class="text-sm text-muted-foreground mb-4">{member.bio}</p>
                <Button variant="outline" size="sm" className="w-full">
                  Contact {member.name.split(' ')[0]}
                </Button>
              </CardContent>
            </Card>
          ))}
        </div>
      </section>

      <!-- Get Involved Section -->
      <section class="mt-16 text-center">
        <Card className="bg-gradient-to-r from-primary/10 to-background p-8">
          <CardHeader>
            <CardTitle className="text-2xl text-foreground">Interested in Joining SAC?</CardTitle>
            <CardDescription className="text-lg">
              We're always looking for passionate students to join our team and make a difference on campus.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex gap-4 justify-center flex-wrap">
              <Button size="lg" className="bg-primary hover:bg-primary/90">
                Apply Now
              </Button>
              <Button variant="outline" size="lg">
                Learn More
              </Button>
            </div>
          </CardContent>
        </Card>
      </section>
    </div>
  </div>
</Layout> 